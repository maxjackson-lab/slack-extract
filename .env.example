# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_WORKSPACE_ID=your-workspace-id-here

# Dropbox Configuration
# Option 1: Simple access token (expires after ~4 hours)
DROPBOX_ACCESS_TOKEN=sl.your-dropbox-access-token-here

# Option 2: Refresh token setup (recommended for persistent access)
# Get these from your Dropbox app console
DROPBOX_REFRESH_TOKEN=your-refresh-token-here
DROPBOX_CLIENT_ID=your-app-client-id-here
DROPBOX_CLIENT_SECRET=your-app-client-secret-here

# Dropbox folder path
DROPBOX_FOLDER_PATH=/slack-exports

# Scheduling Configuration
SCHEDULE_ENABLED=true
SCHEDULE_CRON=0 9 * * 1
RUN_IMMEDIATELY=false

# Application Settings
LOG_LEVEL=info
CSV_FILENAME_PREFIX=slack-data-export
